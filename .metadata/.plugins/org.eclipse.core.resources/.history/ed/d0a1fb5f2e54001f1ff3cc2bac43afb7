/** Clase que representa un computador */
public class Computador {
	// Campos de datos
	private String fabricante;
	private String processor;
	private double ramSize;
	private int diskSize;
	private double processorSpeed;

	// Methods
	/**
	 * Initializes a Computer object with all properties specified.
	 * 
	 * @param man       The computer manufacturer
	 * @param processor The processor type
	 * @param ram       The RAM size
	 * @param disk      The disk size
	 * @param procSpeed The processor speed
	 */
	public Computador(String man, String processor, double ram, int disk, double procSpeed) {
		fabricante = man;
		this.processor = processor;
		ramSize = ram;
		diskSize = disk;
		processorSpeed = procSpeed;
	}

	public double computePower() {
		return ramSize * processorSpeed;
	}

	public double getRamSize() {
		return ramSize;
	}

	public double getProcessorSpeed() {
		return processorSpeed;
	}

	public int getDiskSize() {
		return diskSize;
	}

	// Insert other accessor and modifier methods here.
	public String toString() {
		String result = "Manufacturer: " + fabricante + "\nCPU: " + processor + "\nRAM: " + ramSize + " gigabytes"
				+ "\nDisk: " + diskSize + " gigabytes" + "\nProcessor speed: " + processorSpeed + " gigahertz";
		return result;
	}
}
