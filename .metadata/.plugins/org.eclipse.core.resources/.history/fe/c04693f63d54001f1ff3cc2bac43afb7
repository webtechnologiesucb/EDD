import java.util.Iterator;

public class Lista<T> implements Iterable<T>{
    T[] datos;
    int total;
    static int DEFAULT_SIZE = 1000;

    public Lista() {
        this.datos = (T[]) new Object[DEFAULT_SIZE];
    }

    public Lista(T[] data) {
        this.datos = data;
    }

    public Lista(T[] data, int size) {
        this.datos = data;
        this.total = size;
    }

    public void add(T element) {
        this.datos[this.total++] = element;
    }

    public T get(int index) {
        return this.datos[index];
    }

    public int size() {
        return this.total;
    }

    public void remove(int index) {
        for (int i = index; i < this.total - 1; i++) {
            this.datos[i] = this.datos[i + 1];
        }
        this.total--;
    }

    public void insert(T element, int index) {
        for (int i = this.total; i > index; i--) {
            this.datos[i] = this.datos[i - 1];
        }
        this.datos[index] = element;
        this.total++;
    }

    @Override
    public Iterator<T> iterator() {
        return new Iterator<T>() {
            @Override
            public boolean hasNext() {
                return false;
            }

            @Override
            public T next() {
                return null;
            }
        };
    }
}
