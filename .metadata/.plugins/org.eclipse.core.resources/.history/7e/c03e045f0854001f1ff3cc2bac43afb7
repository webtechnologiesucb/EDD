import java.util.Random;
import java.util.stream.IntStream;

public class MPArray {
	private Random random = new Random();
	private int total;
	private int[] vec;
	
	public MPArray() {
		this.total =  1000;
		//para generar un flujo infinito de nÃºmeros aleatorios y limita este flujo a 1000 elementos
		this.vec = IntStream.generate(() -> random.nextInt(1000)).limit(total).toArray();
	}
	
	public MPArray(int total) {
		this.vec = IntStream.generate(() -> random.nextInt(1000)).limit(total).toArray();
	}
	
	public void imprimir() {
		for(int valor: vec) {
			System.out.print(valor + " ");
		}
		System.out.println("");
	}
	
}
